generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model User {
  id String @id @default(cuid())
  email String @unique
  name String
  password String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  favoriteCities FavoriteCity[]
  refreshTokens   RefreshToken[]
}

model FavoriteCity {
  id String @id @default(cuid())
  userId String
  cityName String
  country String?
  latitude Float
  longitude Float
  orderIndex Int @default(0)
  createdAt DateTime @default(now())

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, cityName, country])
}

model RefreshToken {
  id          String   @id @default(cuid())
  token       String   @unique
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userAgent   String? 
  replacedBy  String? 
  isRevoked   Boolean  @default(false)
  createdAt   DateTime @default(now())
  
  @@index([userId])
  @@index([isRevoked])
  @@map("refresh_tokens")
}